# Production Environment Variables
# Copy this file to .env.production and fill in your values

# Database
# For PostgreSQL (recommended for production):
DATABASE_URL="postgresql://username:password@localhost:5432/buildingscience_millionaire"
# For SQLite (simpler but less scalable):
# DATABASE_URL="file:./data/prod.db"

# OpenAI API
OPENAI_API_KEY="your-openai-api-key-here"

# Application
NODE_ENV="production"
NEXT_PUBLIC_APP_URL="https://yourdomain.com"

# NextAuth (if you add authentication later)
NEXTAUTH_URL="https://yourdomain.com"
NEXTAUTH_SECRET="generate-a-random-32-character-string"

# Optional: Redis for caching (if you add it)
# REDIS_URL="redis://localhost:6379"

# Optional: Email configuration (if you add email features)
# SMTP_HOST="smtp.gmail.com"
# SMTP_PORT="587"
# SMTP_USER="your-email@gmail.com"
# SMTP_PASSWORD="your-app-password"
# EMAIL_FROM="noreply@yourdomain.com"

# Optional: Analytics
# GOOGLE_ANALYTICS_ID="G-XXXXXXXXXX"

# Optional: Error tracking
# SENTRY_DSN="your-sentry-dsn"

# Rate limiting
RATE_LIMIT_ENABLED="true"
RATE_LIMIT_WINDOW_MS="900000"  # 15 minutes
RATE_LIMIT_MAX_REQUESTS="100"

# Logging
LOG_LEVEL="info"  # debug, info, warn, error

# Security
CORS_ORIGINS="https://yourdomain.com,https://www.yourdomain.com"
ALLOWED_HOSTS="yourdomain.com,www.yourdomain.com"

# Performance
# Revalidate static pages every 60 seconds
REVALIDATE_SECONDS="60"